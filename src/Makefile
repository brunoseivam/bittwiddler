.PHONY: all clean
all: btp

OBJS = parser.cmo scanner.cmo ast.cmo

btp: $(OBJS) btp.cmo
	ocamlc -o $@ $^

%.cmo: %.ml
	ocamlc -c $<

%.cmi: %.mli
	ocamlc -c $<

scanner.ml: scanner.mll
	ocamllex -o $@ $<

parser.ml parser.mli: parser.mly
	ocamlyacc $<

clean:
	-rm -f scanner.ml parser.ml parser.mli *.cmo *.cmi btc btp

# Generated by ocamldep *ml *mli
ast.cmo :
ast.cmx :
btc.cmo : scanner.cmo parser.cmi ast.cmo
btc.cmx : scanner.cmx parser.cmx ast.cmx
btp.cmo : scanner.cmo parser.cmi ast.cmo
btp.cmx : scanner.cmx parser.cmx ast.cmx
parser.cmo : ast.cmo parser.cmi
parser.cmx : ast.cmx parser.cmi
scanner.cmo : parser.cmi
scanner.cmx : parser.cmx
parser.cmi : ast.cmo

